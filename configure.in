dnl Process this file with autoconf to produce a configure script.
AC_INIT(eject.c)
AM_INIT_AUTOMAKE(eject, 2.1.0)

dnl Checks for options
AC_ARG_ENABLE(default-device,[ --enable-default-device set default CD-ROM device [default=cdrom]],DEFAULTDEVICE=$enableval,DEFAULTDEVICE=cdrom)

dnl Checks for programs
AC_PROG_CC

dnl Checks for header files.
AC_HEADER_STDC
AC_HEADER_SYS_WAIT
AC_CHECK_HEADERS(fcntl.h sys/ioctl.h unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST

dnl Checks for library functions.
AC_CHECK_FUNCS(regcomp strdup strerror)

AC_SUBST(DEFAULTDEVICE)

AC_OUTPUT(Makefile)
